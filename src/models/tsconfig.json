{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*", "./index.ts"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
  }